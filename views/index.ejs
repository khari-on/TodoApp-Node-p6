<body>
    
        <div class="box" id="heading">
           <h1> <%= titlek %> </h1> 
          </div>
        
          <div class="box">
             
                <% list.forEach((item)=>{ %>
                    <div class="item">
                    <input type="checkbox" name="" id="">
                   <p ><%= item %></p>
                    </div>
                <% }) %>
             
                <form action="/" method="POST">
                    <input type="text" name="newTask" placeholder="Enter the task">
                    
                    <button type="submit" name='btn' value= <%= titlek %> > +
                    </button>
                </form>
            </div>
      

  

    


